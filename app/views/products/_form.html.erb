<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :name, placeholder: "Product Name", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.text_field :price, placeholder: "Price", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.number_field :quantity, min: 0, placeholder: "Quantity", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, placeholder: "Description", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.text_field :brand, placeholder: "Brand", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.select(:category_id, @categories.collect { |c| [ c.name, c.id] }, {include_blank: "Pleae select a category"}) %>
  </div>

  <div class="form-group">
    <strong>Upload Product Image: </strong>
    <%= f.file_field :image %>
  </div>
  
  <div class="form-group">
    <%= f.submit "Create Product", class: "btn btn-success" %>
  </div>
<% end %>
