<p id="notice"><%= notice %></p>
<div id="category-bar">
  <p>
    <strong>
      <%= @product.category.name %>
    </strong> 
  </p>  
</div>
<div class="row">
  <div class="col-md-5">
    <p>
      <%= image_tag @product.image.url, class: "product-pics" %>
    </p>
  </div>
  <div class="col-md-7"> 
      <div class="well-1"> 

        <p>
          <strong>Name:</strong>
          <%= @product.name %>
        </p>

        <p>
          <strong>Price:</strong>
          <%= @product.price %>
        </p>

        <p>
          <strong>Quantity:</strong>
          <%= @product.quantity %>
        </p>

        <p>
          <strong>Description:</strong>
          <%= @product.description %>
        </p>

        <p>
          <strong>Brand:</strong>
          <%= @product.brand %>
        </p>

        <p>
          <strong>Rating:</strong>
          <%= @product.rating %>
        </p>

        <p>
          <strong>Category:</strong>
          <%= @product.category_id %>
        </p>

         <!-- %= link_to 'Edit', edit_product_path(@product) %> | -->
        <%= link_to 'Back', products_path %>

    </div>  
  </div>
</div>  


